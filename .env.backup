# =============================================================================
# EVENT SOURCING & EVENT BUS CONFIGURATION
# =============================================================================
EVENT_BUS_SERVICE_URL=http://localhost:3007
ENABLE_EVENT_DRIVEN=true

# Event Sourcing Configuration
EVENT_STORE_ENABLED=true
KURRENTDB_ENABLED=true
CQRS_ENABLED=true

# Development: KurrentDB Local (Docker) - FREE
KURRENTDB_URL=esdb://localhost:2113?tls=false
KURRENTDB_LOCAL=true

# Fallback: EventStore DB (Docker) - FREE
EVENTSTORE_URL=esdb://localhost:2114?tls=false

# Production: EventStore Cloud (Free Trial)
# EVENTSTORE_CLOUD_URL=esdb+discover://your-cluster.mesdb.eventstore.cloud:2113
# EVENTSTORE_CLOUD_USERNAME=admin
# EVENTSTORE_CLOUD_PASSWORD=your-password

# KurrentDB Cloud (Paid - disabled)
# KURRENTDB_CLOUD_URL=https://your-kurrentdb-cloud-url
# KURRENTDB_API_KEY=your-kurrentdb-api-key
# KURRENTDB_DATABASE=factcheck-events

# Event Store Settings
KURRENTDB_BATCH_SIZE=100
KURRENTDB_RETRY_ATTEMPTS=3
KURRENTDB_TIMEOUT=10000
KURRENTDB_SNAPSHOT_FREQUENCY=100

# Infrastructure Options:
# - true: Requires Redis + RabbitMQ (full features)
# - false: In-memory only (simpler setup, limited features)
EVENT_BUS_REDIS_ENABLED=false
EVENT_BUS_RABBITMQ_ENABLED=false
STANDALONE_MODE=true

# Alternative: Set to true if you have Redis/RabbitMQ running
# EVENT_BUS_REDIS_ENABLED=true
# EVENT_BUS_RABBITMQ_ENABLED=true
# STANDALONE_MODE=false

